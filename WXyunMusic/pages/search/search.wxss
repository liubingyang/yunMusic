@import '/template/hotSearch/hotSearch.wxss';
@import '/template/searchList/searchList.wxss';
@import '/template/searchResult/searchResult.wxss';
.search-box{
  background: #ebecec;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx 30rpx;
  border-radius: 120rpx;
  margin:40rpx 30rpx;
}
.search-icon{
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
  background: url(data:image/svg+xml;base64,) no-repeat;
}
.search-placeholder{
  font-size: 30rpx;
  color:#888;
}
.search-input{
  font-size: 32rpx;
  flex-grow: 1;
}
.search-xx{
  height: 40rpx;
  width: 40rpx;
  background: url(data:image/svg+xml;base64,)
}
.search-content{
  border-top: 1rpx solid #eee;
}