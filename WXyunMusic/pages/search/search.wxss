
@import '/template/searchList/searchList.wxss';
@import '/template/musicLists/musicLists.wxss';
.search-box{
  background: #ebecec;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx 30rpx;
  border-radius: 120rpx;
  margin:40rpx 30rpx;
}
.hotSearch-content{
  padding:0 30rpx;
}
.search-icon{
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
  background: url(data:image/svg+xml;base64,) no-repeat;
}
.search-placeholder{
  font-size: 30rpx;
  color:#888;
}
.search-input{
  font-size: 32rpx;
  flex-grow: 1;
}
.search-xx{
  height: 40rpx;
  width: 40rpx;
  background: url(data:image/svg+xml;base64,)
}
.search-content{
  border-top: 1rpx solid #eee;
}


.hotSearch-tit{
  font-size: 34rpx;
  color:#666;
  line-height: 100rpx; 
}
.hotSearch-labels{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  margin-bottom:40rpx;
  font-size: 34rpx;
  color:#333;
}
.hotSearch-label{
  padding: 10rpx 20rpx;
  margin:10rpx;
  border:1rpx solid #ececec;
  border-radius: 40rpx;
}
.hotSearch-history{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.history-icon{
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
  background: url(data:image/svg+xml;base64,);
}
.history-name{
  font-size: 38rpx;
}
.history-xx{
  height:30rpx;
  width:30rpx;
  background: url(data:image/svg+xml;base64,);
}
.history-right{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ececec;
  justify-content:space-between;
  flex-grow: 1;
}