page {
  background: url("http://music.163.com/api/img/blur/109951163240732641") no-repeat;
  background-position: 50%;
  background-size: auto 100%;
  height: 100%;
  overflow: hidden;
}

.music-logo {
  height: 45rpx;
  width: 260rpx;
  position: absolute;
}

.music-needle {
  height: 280rpx;
  width: 180rpx;
  position: absolute;
  z-index: 2;
  left: 45%;
  top: 0;
}

.music-disc {
  height: 496rpx;
  width: 496rpx;
  margin: 120rpx auto 20rpx;
  position: relative;
}

.music-disc-yuanguang, .music-disc-yuan {
  height: 496rpx;
  width: 496rpx;
}

.music-disc-yuanguang {
  position: absolute;
  left: 0;
  top: 0;
}

.song-image {
  height: 300rpx;
  width: 300rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.song-details {
  padding: 20rpx;
}

.song-lyric {
  text-align: center;
}

.sone-name {
  font-size: 44rpx;
  max-width: 650rpx;
  margin: 0 auto;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: #fff;
  margin-bottom: 20rpx;
}

.song-lyric-lists {
  height: 300rpx;
  overflow: hidden;
  padding: 20rpx 0;
}

.song-lyric-content {
  height: 600rpx;
}

.song-lyric-list {
  color: #ccc;
  line-height: 50rpx;
}

.song-play {
  height: 120rpx;
  width: 120rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: url(data:image/png;base64,) 0 0 no-repeat;
  background-size: 120rpx 120rpx;
}
