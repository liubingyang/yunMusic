
.hotSearch-wrap{
  padding:0 30rpx;
}
.hotSearch-tit{
  font-size: 34rpx;
  color:#666;
  line-height: 100rpx; 
}
.hotSearch-labels{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  margin-bottom:40rpx;
}
.hotSearch-label{
  padding: 10rpx 20rpx;
  margin:10rpx;
  border:1rpx solid #ececec;
  border-radius: 40rpx;
}
.hotSearch-history{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.history-icon{
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
  background: url(data:image/svg+xml;base64,);
}
.history-name{
  font-size: 38rpx;
}
.history-xx{
  height:30rpx;
  width:30rpx;
  background: url(data:image/svg+xml;base64,);
}
.history-right{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ececec;
  justify-content:space-between;
  flex-grow: 1;
}